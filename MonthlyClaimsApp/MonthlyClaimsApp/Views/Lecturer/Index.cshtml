@model MonthlyClaimsApp.Models.Claim

@{
    ViewData["Title"] = "Submit Claim";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center">@TempData["Message"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h3 class="text-center mb-4">Are You a Lecturer?</h3>
        <h2 class="text-center mb-4">Submit Your Monthly Claim</h2>

        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
            <div class="form-group mb-3">
                <label asp-for="LecturerName" class="form-label fw-bold"></label>
                <input asp-for="LecturerName" class="form-control" placeholder="Your full name here" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="LecturerID" class="form-label fw-bold"></label>
                <input asp-for="LecturerID" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="HoursWorked" class="form-label fw-bold"></label>
                <input asp-for="HoursWorked" type="number" class="form-control" placeholder="e.g., 200" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="HourlyRate" class="form-label fw-bold"></label>
                <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Upload Supporting Document (optional)</label>
                <input type="file" name="file" class="form-control" accept=".pdf,.docx,.xlsx" />
                <small class="form-text text-muted">If you don't have a document, please provide a description below.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label fw-bold">Description / Comments</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">Submit Claim</button>
            </div>
        </form>

        <div class="mb-4 text-center">
            <a asp-action="TrackClaims" class="btn btn-warning btn-lg w-100 shadow">
                <i class="bi bi-journal-text me-2"></i> View My Claims
            </a>
        </div>
    </div>
</div>
