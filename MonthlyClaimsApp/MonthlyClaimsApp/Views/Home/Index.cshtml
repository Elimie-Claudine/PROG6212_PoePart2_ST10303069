@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="color:#FF6F00;">Welcome to the Contract Monthly Claim System</h1>
    <p class="text-center mb-5" style="color:#333;">
        Simplify the monthly claim process for IC lecturers. Submit claims, upload supporting documents, and monitor approvals efficiently.
    </p>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100 shadow-sm border-0" style="background-color:#FFE0B2;">
                <div class="card-body text-center">
                    <h5 class="card-title" style="color:#E65100;">Submit Claims</h5>
                    <p class="card-text">
                        Lecturers can quickly submit monthly claims with accurate details and attach relevant documents for verification.
                    </p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm border-0" style="background-color:#B3E5FC;">
                <div class="card-body text-center">
                    <h5 class="card-title" style="color:#01579B;">Track Claims</h5>
                    <p class="card-text">
                        Monitor the progress of submitted claims in real-time and stay updated on approvals and rejections.
                    </p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm border-0" style="background-color:#FFF9C4;">
                <div class="card-body text-center">
                    <h5 class="card-title" style="color:#F57F17;">Approval Management</h5>
                    <p class="card-text">
                        Coordinators and managers can review claims, approve or reject them, and ensure accountability with ease.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-controller="Lecturer" asp-action="Index" class="btn btn-warning btn-lg me-3">Submit a Claim</a>
        <a asp-controller="Lecturer" asp-action="TrackClaims" class="btn btn-info btn-lg">Track My Claims</a>
    </div>
</div>
