@{
    ViewData["Title"] = "Select Role";
}

<div class="container text-center mt-5">
    <h2 class="mb-4" style="color:#333;">Who is using the system?</h2>

    <form method="post" asp-action="SetRole" class="d-inline-block">
        <button type="submit" name="role" value="Program Coordinator" class="btn btn-warning btn-lg me-3">Program Coordinator</button>
        <button type="submit" name="role" value="Academic Manager" class="btn btn-info btn-lg">Academic Manager</button>
    </form>


    <div class="mt-4">
        <small class="text-muted">You can change role later by returning to this page.</small>
    </div>
</div>
